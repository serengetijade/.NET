@using Project_StarWarsAPI_MVC.Models.Swapi;
@using Project_StarWarsAPI_MVC.Data;
@model IEnumerable<Project_StarWarsAPI_MVC.Models.Swapi.Starship>;

@{
    ViewData["Title"] = "Index";
    ViewData["Controller"] = "Home";
    Starship item = Model.First();
}

<div class="text-center">
    <h1 class="display-4">Star Wars Application Programming Interface Project</h1>
</div>

<div class="text-center">
    <br />
    <a class="btn btn-warning" asp-controller="Starships" asp-action="Index">See a list of all Starships</a>
    <br /><br />
</div>

<!--Display the first (random) db record-->
<div class="border border-warning text-center">
    <div class="">
        <p>
            <hr />
            <h3>@item.Name</h3>
            <hr />
        </p>
        <img src="@Url.Action("byteToImg", "Starships", new { Id = item.Id})" alt="Ship Image: @item.Name" style="width: 30%; height:auto" />
        <p>
            <h5>Model: </h5> @item.Model
            <br /><h5>Manufacturer: </h5>@item.Manufacturer
            <br /><h5>Cost: </h5>@item.Cost_In_Credits
            <br /><h5>Length: </h5>@item.Length
            <br /><h5>Max Atmo Speed: </h5>@item.Max_Atmosphering_Speed
            <br /><h5>Crew Capacity: </h5>@item.Crew
            <br /><h5>Passenger Capacity: </h5>@item.Passengers
            <br /><h5>Cargo Capacity: </h5>@item.Cargo_Capacity
            <br /><h5>Consumables: </h5>@item.Consumables
            <br /><h5>Hyperdrive Rating: </h5>@item.Hyperdrive_Rating
            <br /><h5>MGLT: </h5>@item.MGLT
            <br /><h5>Class: </h5>@item.Starship_Class
            <br /><h5>Pilots: </h5>
                @if (item._Pilots != null)
                {
                    foreach (var url in SeedData.StringToArray(item._Pilots))
                    {
                    <a href="@url" target="_blank"> @url </a>
                    <span>   </span>
                    }
                }
            <br /><h5>Films: </h5>
                @if (item._Films != null)
                {
                    foreach (var url in SeedData.StringToArray(item._Films))
                    {
                        <a href="@url" target="_blank"> @url</a>
                        <span>   </span>
                    }
                }
            <br /><h5>Created: </h5>@item.Created
            <br /><h5>Edited: </h5>@item.Edited
            <br /><h5>URL: </h5><a href="@item.Url">@item.Url</a>
        </p>
    </div>
</div>